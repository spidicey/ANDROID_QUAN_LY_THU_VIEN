<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intent.IntentSellForm">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/SearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/bgv_search"
        android:theme="@style/CustomTextAppearanceSearchView"
        app:iconifiedByDefault="false"
        app:queryBackground="@color/transparent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMainDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/SearchBar"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/bgv_recycler"
        android:padding="10dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:contentDescription="BUTTON"
        android:src="@drawable/icon_fab"
        app:backgroundTint="@color/indigo"
        app:maxImageSize="28dp" />

</RelativeLayout>