<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".intent.form.librarian.FormLibrarianModify">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="THÊM NHÂN VIÊN"
        android:textAppearance="@style/CustomTextAppearanceButton"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp">

            <EditText
                android:id="@+id/edtHo"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:autofillHints=""
                android:background="@drawable/bgv_edit_text"
                android:hint="Họ"
                android:inputType="text"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp" />

            <EditText
                android:id="@+id/edtTen"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:autofillHints=""
                android:background="@drawable/bgv_edit_text"
                android:hint="Tên"
                android:inputType="text"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/edtSDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:autofillHints=""
            android:background="@drawable/bgv_edit_text"
            android:hint="Số điên thoại"
            android:inputType="phone"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp" />

        <Spinner
            android:id="@+id/spinnerGioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:background="@drawable/bgv_edit_text"
            android:entries="@array/genders"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp" />

        <LinearLayout
            android:id="@+id/llNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgv_edit_text"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtNgaySinh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:background="@drawable/bgv_edit_text"
                android:hint="Ngày sinh"
                android:inputType="date"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/icon_calendar" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:background="@drawable/bgv_button"
            android:backgroundTint="@color/green"
            android:text="XÁC NHẬN"
            android:textAppearance="@style/CustomTextAppearanceButton"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bgv_button"
            android:backgroundTint="@color/red"
            android:text="HỦY BỎ"
            android:textAppearance="@style/CustomTextAppearanceButton"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</LinearLayout>